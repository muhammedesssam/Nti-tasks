{{>header}}
{{>nav}}

<section class="container my-5">
    <h3>Search Results</h3>
    {{#if search}}
    <table class="table table-bordered">
        <thead class="text-center">
            <tr>
                <th>id</th>
                <th>title</th>
                <th>content</th>
                <th>status</th>
                <th>due date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each search}}
            <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{content}}</td>
                <td>{{status}}</td>
                <td>{{dueDate}}</td>
                <td>
                    {{!-- {{#if status}}
                    <a href="/status/{{id}}" class="btn btn-success mx-3">Active</a>
                    {{else}}
                    <a href="/status/{{id}}" class="btn btn-secondary mx-3">non-active</a>
                    {{/if}} --}}
                    <a href="/show/{{id}}" class="btn btn-primary mx-3">Show</a>
                    <a href="/edit/{{id}}" class="btn btn-warning mx-3">Edit</a>
                    <a href="/delete/{{id}}" class="btn btn-danger mx-3">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>No results found</p>
    {{/if}}
</section>

{{>footer}}